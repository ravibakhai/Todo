<p id="notice"><%= notice %></p>

<h1>My Todo Items</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Description</th>
      <th>Starred</th>
      <th>Hidden</th>
      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
    <div class = "item">

        <nav><% if todo_item.hidden %></nav>
            <strike>  <%= todo_item.description %></strike>
            <%else%>
            <%= todo_item.description%>
            <%end%>
        <nav>
          <% if todo_item.starred %>
          <p> <img src = "https://upload.wikimedia.org/wikipedia/en/e/e5/Yellow_Star.png" </p>
          <% end %>
        </nav>

        <nav>
          <% if todo_item.hidden %>
          <!-- <strike> <%= todo_item %> </strike> -->
          <% end %>
        </nav>
        <button id="hide">Hide</button>
        <button id="show">Menu</button>
        <p><%= link_to 'Show', todo_item %></p>
        <p><%= link_to 'Edit', edit_todo_item_path(todo_item) %></p>
        <p><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></p>


    </div>
    <% end %>
  </tbody>
</table>

<div class = "NewTodo">

<%= link_to image_tag("addicon.png", alt: "New Todo item", class: "add"), new_todo_item_path %>
</div>
